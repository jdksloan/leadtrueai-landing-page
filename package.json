{
  "name": "leadtrueai-landing-page",
  "version": "1.0.0",
  "description": "Lead True AI landing page with dark theme",
  "type": "module",
  "scripts": {
    "dev": "npm run build-css && vite",
    "build": "npm run build-css:prod && vite build",
    "preview": "vite preview",
    "build-css": "tailwindcss -i ./src/input.css -o ./output.css --watch",
    "build-css:prod": "tailwindcss -i ./src/input.css -o ./output.css --minify"
  },
  "devDependencies": {
    "tailwindcss": "^3.4.0",
    "vite": "^5.0.0"
  }
}